<h2 class="display-5 fw-bold mb-3 px-3">Stupid Coaching</h2>

<p class="mb-4 fs-5 px-3">Ask your coach anything:</p>

<%= form_with url: "/answer", method: :get, data: { turbo: false }, class: "mb-3 px-3" do %>
  <div class="input-group input-group-lg">
    <%= text_field_tag :question, nil, class: "form-control", placeholder: "Type your question..." %>
    <button type="submit" class="btn btn-primary">Ask</button>
  </div>
<% end %>
